<% layout("/layouts/boilerplates.ejs")%> 
   
<style>
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        /* Center items on smaller screens */
    }

    .filter {
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
        transition: opacity 0.3s ease;
    }

    .filter:hover {
        opacity: 1;
        cursor: pointer;
    }

    .filter p {
        font-size: 0.8rem;
    }

    .tax-info {
        display: none;
    }

    .tax-toggle {
        border: 1px solid black;
        border-radius: 2rem;
        height: 3rem;
        padding: 1rem;
        margin-left: 3rem;
        display: flex;
        align-items: center;
    }

    /* Responsive styling */
    @media (max-width: 1200px) {
        .filter {
            margin-right: 1.5rem;
        }
    }

    @media (max-width: 992px) {
        #filters {
            justify-content: space-around;
        }

        .filter p {
            font-size: 0.75rem;
        }
    }

    @media (max-width: 768px) {
        #filters {
            flex-direction: row;
            justify-content: center;
        }

        .filter {
            margin-right: 1rem;
        }

        .tax-toggle {
            margin-left: 1.5rem;
            height: 2.5rem;
            padding: 0.75rem;
        }
    }

    @media (max-width: 576px) {
        #filters {
            flex-direction: column;
            align-items: center;
        }

        .filter {
            margin-right: 0;
            margin-top: 1rem;
        }

        .filter p {
            font-size: 0.7rem;
        }

        .tax-toggle {
            width: 80%;
            margin-left: 0;
            padding: 0.5rem;
        }
    }
</style>

